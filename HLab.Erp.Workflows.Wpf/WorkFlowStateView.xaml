<UserControl x:Class="HLab.Erp.Workflow.WorkFlowStateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="clr-namespace:HLab.Erp.Workflow"
             xmlns:icons="clr-namespace:HLab.Mvvm.Icons;assembly=HLab.Mvvm.Wpf"
             xmlns:lang="clr-namespace:HLab.Mvvm.Lang;assembly=HLab.Mvvm.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300" 
             d:DataContext="{d:DesignInstance {x:Type wpf:WorkflowViewModel}}"
              Foreground="Aqua"
             >
    <StackPanel Orientation="Horizontal">
        <ListView
            ItemsSource="{Binding Model.BackwardActions}"
            Background="Transparent"/>
        <Grid Height="50"                
>
            <Grid.Effect>
                <DropShadowEffect 
                    ShadowDepth="0"
                    Color="Aqua"
                    Opacity="1"
                    BlurRadius="10"
                />
            </Grid.Effect>

            <Border
                BorderBrush="Aqua"
                BorderThickness="3"
                Background="Transparent" 
                CornerRadius="10">
            </Border>
            <StackPanel Orientation="Horizontal">
                <icons:IconView Margin="5" Width="40" Id="{Binding Model.Icon}"/>
            <Label
                Margin="5"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                FontSize="20"
                FontWeight="Black" 

                ><StackPanel>
                        <lang:Localize Id="{Binding Model.Caption}"/>
                </StackPanel>
            </Label>
            </StackPanel>
        </Grid>

        <ListView
            ItemsSource="{Binding Model.Actions}"
            Background="Transparent"
            Grid.Column="1">
        </ListView>

    </StackPanel>
</UserControl>
