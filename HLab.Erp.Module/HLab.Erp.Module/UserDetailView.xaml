<UserControl x:Class="HLab.Erp.Module.UserDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HLab.Erp.Module"
             xmlns:module="clr-namespace:HLab.Erp.Module"
             xmlns:wpf="clr-namespace:HLab.Base;assembly=HLab.Base.Wpf"
             xmlns:icons="clr-namespace:HLab.Mvvm.Icons;assembly=HLab.Mvvm.Wpf"
             xmlns:lang="clr-namespace:HLab.Mvvm.Lang;assembly=HLab.Mvvm.Wpf"
             xmlns:views="clr-namespace:HLab.Erp.Core.Views;assembly=HLab.Erp.Core.Wpf"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type local:UserViewModelDesign}, IsDesignTimeCreatable=True}"             
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF005050" Margin="0,0,0,-127">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    <views:DetailView>

    <ContentPresenter Height="50" Content="{Binding Locker}" Grid.ColumnSpan="2"/>

        <Label Style="{DynamicResource Separator}" >
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Canvas>
                    <icons:IconView Path = "Icons/Approved" Height="35" Opacity="0.8"/>
                </Canvas>
                <lang:Localize Id="User" Margin="50,0,0,0"/>
            </StackPanel>
        </Label>

        <Label HorizontalContentAlignment="Right" >
            <lang:Localize Id="^Login" StringFormat="{}{0} : " />
        </Label>
        <TextBox 
            IsReadOnly="{Binding Locker.IsReadOnly}"
            Text="{Binding Model.Login}" HorizontalContentAlignment="Center" />

        <Label HorizontalContentAlignment="Right" >
            <lang:Localize Id="^Name" StringFormat="{}{0} : " />
        </Label>
        <TextBox 
            IsReadOnly="{Binding Locker.IsReadOnly}"
            Text="{Binding Model.Name}" HorizontalContentAlignment="Center" />

        <Label HorizontalContentAlignment="Right" >
            <lang:Localize Id="^First Name" StringFormat="{}{0} : " />
        </Label>
        <TextBox
            IsReadOnly="{Binding Locker.IsReadOnly}"
            Text="{Binding Model.FirstName}" HorizontalContentAlignment="Center" />

        <Label HorizontalContentAlignment="Right" >
            <lang:Localize Id="^Function" StringFormat="{}{0} : " />
        </Label>
        <TextBox
            IsReadOnly="{Binding Locker.IsReadOnly}"
            
            Text="{Binding Model.Function}" HorizontalContentAlignment="Center" />

        <Label HorizontalContentAlignment="Right" >
            <lang:Localize Id="^Expiry" StringFormat="{}{0} : " />
        </Label>
        <wpf:DateEx 
            IsReadOnly="{Binding Locker.IsReadOnly}"
            EmptyDayAllowed="False"
            MinWidth="100" Date="{Binding Model.Expiry}" HorizontalContentAlignment="Center" />

    </views:DetailView>
        <views:DetailView Grid.Row="2">
            <Label Style="{DynamicResource Separator}" >
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <Canvas>
                        <icons:IconView  Path="Icons/Edit" Height="35" Opacity="0.8"/>
                    </Canvas>
                    <ContentControl Width="50"></ContentControl>
                    <lang:Localize  Id="Note"/>
                </StackPanel>
            </Label>


            <TextBox IsReadOnly="{Binding Locker.IsReadOnly}" Margin="50,0,15,0"  Grid.ColumnSpan="2"  Text="{Binding Model.Note}" AcceptsReturn="True" TextWrapping="Wrap"/>
            <Label />

        </views:DetailView>

</Grid>
</UserControl>
